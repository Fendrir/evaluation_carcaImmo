{% extends "::base.html.twig" %}

{% block title %}Annonces{% endblock %}

{% block body %}
    <div class="container">

    {{ form_start(form) }}

        <div class="row">
            <div class="col-md-6">
                <h2>Rechercher un titre</h2>
                    <div id="custom-search-input">
                        <div class="input-group col-md-12">

                            {{ form_widget(form.recherche, {'attr': {'class': 'form-control input-lg',
                                                                    'placeholder': 'Titre'
                                                                    }} ) }}
                                        
                            <span class="input-group-btn">
                                <button class="btn btn-info btn-lg" type="submit">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </span>
                        </div>
                    </div>
            </div>
        </div>
        </br>
        {{ form_end(form)}}

        <h1 class="text-center">Annonces</h1>

            <div class="row">

                <div class="col-xs-12">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">Titre</th>
                                <th class="text-center">Types</th>
                                <th class="text-center">Nombres de pièces</th>
                                <th class="text-center">Photo</th>
                                <th class="text-center">Prix</th>
                                <th class="text-center">Propriétaire</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for annonce in annonces %}
                                {# {{ dump(annonce)}} #}
                                <tr>
                                    <td class="text-center"><a id="" class=" btn" href="/annonces/pageAnnonce/{{ annonce.titre }}">{{ annonce.titre }}</a></td>
                                    <td class="text-center">{{ annonce.type.nom }}</td>
                                    <td class="text-center">{{ annonce.nbPieces }}</td>
                                    <td class="text-center">{{ annonce.photo }}</td>
                                    <td class="text-center">{{ annonce.prix }}</td>
                                    <td class="text-center">{{ annonce.client.nom }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
    </div>
{% endblock %}

